  "homepage": "https://github.com/sablier-labs/v2-periphery#readme",
  "keywords": [
    "airdrops",
    "airstreams",
    "asset-distribution",
    "asset-streaming",
    "blockchain",
    "cryptoasset-streaming",
    "cryptoassets",
    "ethereum",
    "foundry",
    "money-streaming",
    "real-time-finance",
